<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="meeting_minutes_view_mixin_form" model="ir.ui.view">
        <field name="model">meeting.minutes.mixin</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name"/>
                        </h1>
                    </div>

                    <h2>Context</h2>
                    <group>

                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>

                        <group>
                            <field name="mean_communication_id"/>

                        </group>
                    </group>

                    <group>
                        <field name="partner_ids" widget="many2many_tags"/>
                    </group>

                    <notebook>
                        <page name="meeting_minutes" string="Meeting Minutes">
                            <h2>Planned Points</h2>
                            <group>
                                <field name="planned_point" nolabel="1"/>
                            </group>

                            <h2>Discussed Points</h2>
                            <group>
                                <field name="additional_note" nolabel="1" colspan="4"/>
                            </group>

                            <h2>Agenda</h2>
                            <group>
                                <field name="agenda" nolabel="1"/>
                            </group>

                            <h2>Resources</h2>
                            <group>
                                <field name="resources" nolabel="1"/>
                            </group>

                            <h2>Risks</h2>
                            <group>
                                <field name="risks" nolabel="1"/>
                            </group>

                            <h2>Duty</h2>
                            <group>
                                <field name="duty" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="meeting_minutes_view_mixin_tree" model="ir.ui.view">
        <field name="model">meeting.minutes.mixin</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="mean_communication_id"/>
                <field name="partner_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

</odoo>
