<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Add missing access to the Light Admin when module password_security is installed. -->
    <record id="access_admin_light_password_history" model="ir.model.access">
        <field name="name">Admin Light: res.users.pass.history</field>
        <field name="group_id" ref="admin_light_user.group_user_management"/>
        <field name="model_id" ref="password_security.model_res_users_pass_history"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="password_security.erp_manager_pass_history_rule" model="ir.rule">
        <field name="groups" eval="[(4, ref('admin_light_user.group_user_management'))]"/>
    </record>

</odoo>
