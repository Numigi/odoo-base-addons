<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="meeting_minutes_view_mixin_form" model="ir.ui.view">
        <field name="model">meeting.minutes.mixin</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <header>
                </header>
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name"/>
                        </h1>
                    </div>

                    <h2>Context</h2>
                    <group>

                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>

                        <group>
                            <field name="meeting_channel_id"/>
                            <field name="res_model"/>
                            <field name="res_id"/>
                        </group>
                    </group>

                    <group>
                        <field name="partner_ids" widget="many2many_tags"/>
                    </group>

                    <notebook>
                        <page name="meeting_minutes" string="Meeting minutes">
                            <h2>Planned Points</h2>
                            <group>
                                <field name="planned_points" nolabel="1"/>
                            </group>

                            <h2>Discussed Points</h2>
                            <group>
                                <field name="discussed_points" nolabel="1" colspan="4"/>
                            </group>

                            <h2>Duties</h2>
                            <group>
                                <field name="duties" nolabel="1"/>
                            </group>

                            <h2>Resources</h2>
                            <group>
                                <field name="resources" nolabel="1"/>
                            </group>

                            <h2>Risks</h2>
                            <group>
                                <field name="risks" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="meeting_minutes_view_mixin_tree" model="ir.ui.view">
        <field name="model">meeting.minutes.mixin</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="meeting_channel_id"/>
                <field name="res_model"/>
                <field name="res_id" readonly="1"/>
                <field name="partner_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="meeting_minutes_mixin_view_search" model="ir.ui.view">
        <field name="name">meeting.minutes.mixin.search</field>
        <field name="model">meeting.minutes.mixin</field>
        <field name="arch" type="xml">
            <search string="Meeting minutes">
                <field name="name"/>
                <field name="partner_ids"/>
                <field name="res_model_id"/>
                <field name="user_id"/>
                <group expand="1" string="Group By">
                    <filter string="Model" name="group_by_model" context="{'group_by':'res_model_id'}"/>
                    <filter string="User" name="group_by_user_id" context="{'group_by':'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="meeting_minutes_action" model="ir.actions.act_window">
        <field name="name">Meeting minutes</field>
        <field name="res_model">meeting.minutes.mixin</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="meeting_minutes_mixin_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new meeting minutes
            </p>
        </field>
    </record>

</odoo>
