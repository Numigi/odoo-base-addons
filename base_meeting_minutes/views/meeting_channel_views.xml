<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="meeting_channel_view_form" model="ir.ui.view">
        <field name="name">meeting.channel.form</field>
        <field name="model">meeting.channel</field>
        <field name="arch" type="xml">
            <form string="Communication">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="meeting_channel_view_tree" model="ir.ui.view">
        <field name="name">meeting.channel.tree</field>
        <field name="model">meeting.channel</field>
        <field name="arch" type="xml">
            <tree string="Communication" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="meeting_channel_action" model="ir.actions.act_window">
        <field name="name">Meeting Channels</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">meeting.channel</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>