<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="favicon" inherit_id="web.layout" name="Konvergo Favicon">
        <xpath expr="//link[@rel='shortcut icon']" position="before">
            <t t-if="not website">
                <t t-set="x_icon" t-value="'/konvergo_favicon_title/static/src/img/favicon.ico'"/>
            </t>
        </xpath>
    </template>

    <template id="title" inherit_id="web.layout" name="Konvergo Title" priority="1000">
        <xpath expr="//title" position="replace">
            <title t-esc="title and title.replace('Odoo', 'Konvergo') or 'Konvergo'" />
        </xpath>
    </template>
</odoo>
