<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_form" model="ir.ui.view">
        <field name="name">Config Settings Form: allow settings BI user password</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='general_settings']" position="inside">
                <div id="business_documents">
                    <h2>BI Database User</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="text-muted">
                                    Set/change the password of the BI user
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="database_bi_user_password" string="New Password" class="col-lg-4 o_light_label"/>
                                        <field name="database_bi_user_password" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="database_bi_user_disable_column_protection"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="database_bi_user_disable_column_protection" string="Disable Sentive Data Protection"/>
                                <div class="text-muted">
                                    By default, columns related to private (sensitive) fields (SIN, gender, marital status, etc)
                                    are revoked from the BI User.

                                    By checking this box, the restriction on those columns is lifted.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
