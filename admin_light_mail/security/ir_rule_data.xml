<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="mail_template_group_email_template_write_rule" model="ir.rule">
        <field name="name">Write and delete access restricted to the author or the administrator </field>
        <field name="model_id" ref="mail.model_mail_template" />
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('admin_light_mail.group_email_template'))]" />
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_create" eval="1" />
        <field name="perm_unlink" eval="1" />
    </record>

</odoo>