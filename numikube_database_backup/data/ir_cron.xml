<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <record id="backup_cron" model="ir.cron">
        <field name="name">Hourly Database Backup to Minio</field>
        <field name="model_id" ref="model_numikube_database_backup"/>
        <field name="state">code</field>
        <field name="code">model.run_hourly_backup()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="False"/>
    </record>

    <record id="daily_backup_cron" model="ir.cron">
        <field name="name">Daily Database Backup to Minio</field>
        <field name="model_id" ref="model_numikube_database_backup"/>
        <field name="state">code</field>
        <field name="code">model.run_daily_backup()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="False"/>
    </record>

</odoo>
