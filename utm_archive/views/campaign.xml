<odoo>

    <record model="ir.ui.view" id="utm_campaign_tree">
        <field name="name">utm.campaign.tree</field>
        <field name="model">utm.campaign</field>
        <field name="inherit_id" ref="utm.utm_campaign_tree"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="active"/>
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="utm_campaign_form">
        <field name="name">utm.campaign.form</field>
        <field name="model">utm.campaign</field>
        <field name="inherit_id" ref="utm.utm_campaign_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="active"/>
            </xpath>
        </field>
    </record>

    <record id="utm_campaign_search" model="ir.ui.view">
        <field name="name">utm.campaign.search</field>
        <field name="model">utm.campaign</field>
        <field name="arch" type="xml">
            <search string="Search Campaigns">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="active" domain="[('active', '=', False)]"/>
           </search>
        </field>
    </record>

</odoo>